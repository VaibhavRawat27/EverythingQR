<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="26dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:text="EverthingQR is an application created in order to make efficient use of QR codes. You can create custom QR codes easily and scan any QR code from the app."
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textViewPolicy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:text="Created by - TheStudioCity"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewPolicy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textViewPolicy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:text="Logo - Flaticon\nQR code - ZXing"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewPolicy1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textViewPolicy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:text="Write us at - thestudiocityx@gmail.com"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewPolicy2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>
